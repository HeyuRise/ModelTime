<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/separate"
    tools:context="com.dxy.medicaltime.sun.activity.FeedBackActivity">
    <RelativeLayout
            android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:background="@color/backGround"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/feed_back_img"
            android:src="@drawable/ic_up"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:onClick="goback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/feed_back_img"
            android:text="用户反馈"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/feed_back_my"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <EditText
            android:id="@+id/feed_back_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:hint="输入反馈的内容"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="60dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:onClick="send"
            android:src="@drawable/ic_action_send_now"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <LinearLayout
            android:layout_alignParentTop="true"
            android:background="#999999"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    </RelativeLayout>
    <ListView
        android:id="@+id/feed_back_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/feed_back_my"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/feed_back_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="40dp"
            android:layout_height="40dp"
            fresco:roundAsCircle="true"
            android:layout_margin="10dp"
            fresco:placeholderImage="@mipmap/icon"/>
        <TextView
            android:layout_width="200dp"
            android:background="@drawable/textback"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:text="你好，我是医学时间的产品经理，欢迎你反馈建议使用医学时间的感受和建议"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
