<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
>

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/discuss_item_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:roundAsCircle="true"
            app:placeholderImage="@drawable/image_index"
            android:layout_marginRight="20dp"
    />

    <TextView
            android:id="@+id/discuss_item_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_alignTop="@id/discuss_item_img"
            android:layout_toRightOf="@+id/discuss_item_img"
    />

    <TextView
            android:id="@+id/discuss_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/discuss_item_username"
            android:layout_toRightOf="@+id/discuss_item_img"
            android:layout_marginTop="10dp"
    />

</RelativeLayout>






