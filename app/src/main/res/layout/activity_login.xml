<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/separate"
    android:layout_height="match_parent"
    tools:context="com.dxy.medicaltime.sun.activity.LoginActivity">
    <RelativeLayout
        android:id="@+id/login_toolbar"
        android:background="@color/backGround"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/login_goback"
            android:src="@drawable/ic_up"
            android:layout_centerVertical="true"
            android:onClick="goback"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="登陆"
            android:layout_marginLeft="20dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_toRightOf="@id/login_goback"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <EditText
        android:id="@+id/userName"
        android:hint="请输入用户名"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:hint="请输入密码"/>

    <Button
        android:background="@drawable/textbackmy"
        android:layout_gravity="center_horizontal"
        android:text="登陆"
        android:textSize="15sp"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="快速登录"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="80dp">
        <ImageView
            android:onClick="weixin"
            android:src="@drawable/news_detail_share02"
            android:layout_width="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:onClick="sina"
            android:src="@drawable/news_detail_share04"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginRight="50dp"
            android:src="@drawable/news_detail_share09"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:onClick="QQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>


</LinearLayout>
