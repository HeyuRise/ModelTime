<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="15dp"
>

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/guide_item_img"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:placeholderImage="@drawable/image_index"
    />

    <TextView
            android:id="@+id/guide_item_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/guide_item_img"
            android:layout_toRightOf="@id/guide_item_img"
    />

    <TextView
            android:id="@+id/guide_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/guide_item_img"
    />

    <TextView
            android:id="@+id/guide_item_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/guide_item_img"
            android:layout_above="@id/guide_item_share"
            android:layout_alignTop="@id/guide_item_img"
            android:textSize="17sp"
            android:textColor="#444"
    />

</RelativeLayout>