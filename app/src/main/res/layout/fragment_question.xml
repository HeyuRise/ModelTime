<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dxy.medicaltime.sun.fragment.QuestionFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="@color/separate"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
        <LinearLayout
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:id="@+id/question_title"
            android:padding="10dp"
            android:textSize="17sp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="90dp" />
        <LinearLayout
            android:background="#cccccc"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <RadioButton
                android:id="@+id/question_a"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/question_b"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <RadioButton
                android:id="@+id/question_c"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />
            <RadioButton
                android:id="@+id/question_d"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="0dp" />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/show_if_isAnswered"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/question_notification"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
            <LinearLayout
                android:background="@color/separate"
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <TextView
                android:padding="15dp"
                android:text="推展阅读"
                android:textColor="#000000"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:src="@mipmap/icon"
                    android:id="@+id/question_other_img"
                    android:layout_centerVertical="true"
                    android:layout_width="120dp"
                    android:layout_height="70dp" />
                <TextView
                    android:text="呵呵哒"
                    android:layout_toRightOf="@id/question_other_img"
                    android:padding="15dp"
                    android:textColor="#000000"
                    android:id="@+id/question_other_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="呵呵哒"
                    android:id="@+id/question_other_share_count"
                    android:layout_alignParentBottom="true"
                    android:textSize="10sp"
                    android:padding="15dp"
                    android:layout_toRightOf="@id/question_other_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/question_other_time"
                    android:text="呵呵哒"
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:padding="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:background="@color/separate"
            android:layout_width="match_parent"
            android:layout_height="30dp"/>
    </LinearLayout>
</ScrollView>
