<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dxy.medicaltime.sun.activity.CollectActivity">
    <RelativeLayout
        android:background="@color/backGround"
        android:id="@+id/collect_toolbar"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/collect_back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:onClick="goback"
            android:src="@drawable/ic_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/collect_back"
            android:text="收藏"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/collect_swipeRefresh"
        android:layout_width="match_parent"
        android:layout_below="@id/collect_toolbar"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/collect_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>


</RelativeLayout>
