<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
>

    <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/second_special_detail_img"
            android:layout_width="100dp"
            android:layout_height="80dp"
            app:placeholderImage="@drawable/image_index"
    />

    <TextView
            android:id="@+id/second_special_detail_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/second_special_detail_img"
            android:layout_marginRight="10dp"
            android:padding="5dp"
    />

    <TextView
            android:id="@+id/second_special_detail_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/second_special_detail_img"
            android:layout_toRightOf="@+id/second_special_detail_img"
            android:singleLine="true"
            android:textSize="18dp"
            android:textColor="@android:color/black"
    />

    <TextView
            android:id="@+id/second_special_detail_share_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/second_special_detail_img"
            android:layout_toLeftOf="@id/second_special_detail_time_tv"
            android:layout_toRightOf="@id/second_special_detail_img"
            android:layout_marginLeft="10dp"
    />

</RelativeLayout>