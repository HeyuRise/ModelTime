<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/backGround"
    >
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:onClick="onBtnClick"
                android:src="@drawable/ic_up"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
        />

        <TextView
                android:id="@+id/task_center_imgbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:textColor="@android:color/white"
                android:text="邀好友赢丁当"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
        />

    </LinearLayout>

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/keypage_invite_toppic"
    />

    <TextView
            android:id="@+id/task_cneter_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="邀请好友可以赢去丁当哦"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="您的邀请码是:"
                android:padding="30dp"
        />

        <TextView
                android:id="@+id/invite_code_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#388ec0"
                android:text="345356"
        />

    </LinearLayout>

    <Button
            android:id="@+id/task_center_share_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:onClick="onBtnClick"
            android:text="立即分享并邀请"
            android:background="@color/backGround"
    />

</LinearLayout>