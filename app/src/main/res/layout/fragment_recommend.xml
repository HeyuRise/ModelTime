<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
        android:id="@+id/Recommend_headView"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑推荐"
                android:textSize="18sp"
                android:textColor="#FF050505"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/Recommend_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:rotation="-90"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ebook_reading_bookmark_close"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/editTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="14sp"
                android:textColor="#FF050505"
                android:layout_toLeftOf="@+id/Recommend_img1"
                />
            <com.dxy.medicaltime.chen.fragment.MyGridView
                android:layout_below="@+id/Recommend_img1"
                android:id="@+id/edit_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:horizontalSpacing="15dp"
                android:verticalSpacing="20dp"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="热门推荐"
                android:textColor="#FF050505"
                android:textSize="18sp"
                android:layout_alignParentLeft="true"/>
            <ImageView
                android:id="@+id/Recommend_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:rotation="-90"
                android:layout_marginLeft="8dp"
                android:src="@drawable/ebook_reading_bookmark_close"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/popular_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textSize="14sp"
                android:textColor="#FF050505"
                android:layout_toLeftOf="@+id/Recommend_img2"
                />
            <com.dxy.medicaltime.chen.fragment.MyGridView
                android:layout_below="@+id/Recommend_img2"
                android:id="@+id/popular_gridView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:horizontalSpacing="15dp"
                android:verticalSpacing="20dp"/>
        </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>